{% extends 'base.html.twig' %}

{% block title %}Categorie
{% endblock %}

{% block body %}
	<center>
		<h1>Categorie</h1>
	</center>
	<br>
	<br>


	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ categorie.id }}</td>
			</tr>
			<tr>
				<th>Nom</th>
				<td>{{ categorie.nom }}</td>
			</tr>
			<tr>
				<th>Type</th>
				<td>{{ categorie.Type }}</td>
			</tr>
			<tr>
				<th>Archive</th>
				<td>{{ categorie.archive ? 'Yes' : 'No' }}</td>
			</tr>
		</tbody>
	</table>
	<div class="button-group d-flex pt-sm-25 justify-content-md-end justify-content-start ">

		<button class="btn btn-danger btn-default btn-squared btn-transparent-danger ">
			<a href="{{ path('app_categorie_index') }}">back to list</a>
		</button>

		<button class="btn btn-success btn-default btn-squared btn-transparent-success ">
			<a href="{{ path('app_categorie_edit', {'id': categorie.id}) }}">edit</a>
		</button>
		{{ include('BackOffice/categorie/_delete_form.html.twig') }}

	</div>

{% endblock %}
