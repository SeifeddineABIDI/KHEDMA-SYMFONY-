{% extends 'base.html.twig' %}

{% block title %}Annonce{% endblock %}

{% block body %}
    <h1>Annonce</h1>

    <table border="2" class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ annonce.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ annonce.titre }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ annonce.date ? annonce.date|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Classification</th>
                <td>{{ annonce.classification.nom }}</td>
            </tr>
            <tr>
                <th>Archive</th>
                <td>{{ annonce.archive ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_annonce_index') }}">back to list</a>

    <a href="{{ path('app_annonce_edit', {'id': annonce.id}) }}">edit</a>

    {{ include('BackOffice/annonce/_delete_form.html.twig') }}
{% endblock %}
